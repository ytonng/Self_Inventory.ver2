<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LowFridge">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="2"
        android:padding="16dp"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp"
        android:layout_centerInParent="true">

        <!-- First item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/item1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_assignment_add_24"
            android:contentDescription="Item 1"
            android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Second item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/item2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_assignment_add_24"
            android:contentDescription="Item 2"
            android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 2"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Third item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/item3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_assignment_add_24"
            android:contentDescription="Item 3"
            android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 3"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Fourth item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/item4_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_assignment_add_24"
            android:contentDescription="Item 4"
            android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 4"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </GridLayout>

</RelativeLayout>
